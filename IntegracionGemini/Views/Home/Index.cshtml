@model IntegracionGemini.Models.chatBotViewModel

<h2>Chatbot Interface</h2>

<form method="post" asp-controller="Home" asp-action="Index">

    <label>Select Chatbot Provider:</label><br />
    @Html.DropDownListFor(m => m.SelectedProvider, Model.Providers, new { @class = "form-select" })

    <br />

    <label>Enter your prompt:</label><br />
    @Html.TextAreaFor(m => m.Prompt, new { rows = "5", cols = "60", @class = "form-control" })

    <br />

    <button type="submit">Send</button>
</form>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <p style="color:red;">@Model.Error</p>
}

@if (!string.IsNullOrEmpty(Model.ChatbotResponse))
{
    <h3>Response:</h3>
    <pre>@Model.ChatbotResponse</pre>
}
